mixin featureCard(title, content)
    .col-lg-4.col-md-9.col-sm-12.cardCol.text-center.mt-3
        .card
            .card-header.featureCardHeader
                h3= title
            .card-body
                p.card-text= content
html
    head
        title VulnerabiliTea
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet' href='/css/bootstrap.min.css' type='text/css')
        link(rel='stylesheet' href='/css/main.css' type='text/css')
        link(rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap' type='text/css')
    body
        script(src='/js/bootstrap.bundle.min.js')
        .container-fluid.titleContainer
            .row.titleRow.justify-content-center
                .col-lg-4.col-md-12.titleCol.text-center
                    h1.titleHeader VulnerabiliTea
                    h2.subTitleHeader Managing security vulnerabilities has never been easier
                    button.btn.btn-primary.startButton(href='#' role='button') Get Started ‚ùØ
                    // hacky solution, but it works for now
                    .mb-5
        .container-fluid.featureCardsContainer
            .row.featureCardsRow.justify-content-center
                +featureCard('Privacy Focused', 'We respect your privacy. We will never give access to your information to any third-parties. We are also commited to store as little information about you as possible for our services to function properly.')
                +featureCard('Easy to Use', 'We have tried to make our user-interface straightforward. Creating new security vulnerability reports and sharing it with friends and companies is just a few clicks away. We suggest you give it a try.')
                +featureCard('Open Source', 'VulnerabiliTea is fully open source. If you\'d like to do so, you can help us by contributing to this projects GitHub page. There you can report bugs, help us develop, or use VulnerabiliTea for a project of your own.')

